<?xml version="1.0" encoding="utf-8"?>
<LinearLayout

    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:orientation="vertical"
    android:layout_height="match_parent">
    <RelativeLayout
        android:background="@color/app_color"
        android:layout_width="match_parent"
        android:layout_height="@dimen/_50sdp">

        <TextView
            android:layout_centerVertical="true"
            android:layout_centerHorizontal="true"
            android:textStyle="bold"
            android:textColor="@color/colorwhite"
            android:textSize="@dimen/_15sdp"
            android:text="SETTINGS"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true">


        </RelativeLayout>

        <ImageView
            android:layout_centerVertical="true"

            android:elevation="@dimen/_10sdp"
            android:id="@+id/back_icon"
            android:layout_marginLeft="@dimen/_10sdp"
            android:layout_alignParentLeft="true"
            app:srcCompat="@drawable/back_icon"
            android:layout_width="@dimen/_20sdp"
            android:layout_height="@dimen/_20sdp" />



    </RelativeLayout>




<androidx.cardview.widget.CardView
    android:id="@+id/cardview_changepassword"
    android:layout_marginTop="@dimen/_5sdp"
    android:layout_width="match_parent"
    app:cardElevation="@dimen/_2sdp"
    app:cardBackgroundColor="@color/colorwhite"
    android:layout_height="@dimen/_50sdp">

    <RelativeLayout
        android:layout_margin="@dimen/_2sdp"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <ImageView
            android:id="@+id/locked_icom"
            android:layout_centerVertical="true"

            android:layout_margin="@dimen/_10sdp"
            app:srcCompat="@drawable/locked"
            android:layout_width="@dimen/_35sdp"
            android:layout_height="@dimen/_35sdp" />
        <TextView
            android:textStyle="bold"
            android:textSize="@dimen/_15sdp"
            android:text="Change Password"
            android:textColor="@color/app_color"
            android:layout_toEndOf="@+id/locked_icom"
            android:layout_centerVertical="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
    </RelativeLayout>


</androidx.cardview.widget.CardView>
<androidx.cardview.widget.CardView
    android:id="@+id/cardview_points"
    android:layout_marginTop="@dimen/_5sdp"
    android:layout_width="match_parent"
    app:cardElevation="@dimen/_2sdp"
    app:cardBackgroundColor="@color/colorwhite"
    android:layout_height="@dimen/_50sdp">

    <RelativeLayout
        android:layout_margin="@dimen/_2sdp"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <ImageView
            android:id="@+id/locked"
            android:layout_centerVertical="true"
            android:layout_margin="@dimen/_10sdp"
            app:srcCompat="@drawable/locked"
            android:layout_width="@dimen/_35sdp"
            android:layout_height="@dimen/_35sdp" />
        <TextView
            android:id="@+id/txtPoints"
            android:textStyle="bold"
            android:textSize="@dimen/_15sdp"
            android:text="My Points"
            android:textColor="@color/app_color"
            android:layout_toEndOf="@+id/locked"
            android:layout_centerVertical="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
    </RelativeLayout>


</androidx.cardview.widget.CardView>
<androidx.cardview.widget.CardView
    android:id="@+id/cardview_refer"
    android:layout_marginTop="@dimen/_5sdp"
    android:layout_width="match_parent"
    app:cardElevation="@dimen/_2sdp"
    app:cardBackgroundColor="@color/colorwhite"
    android:layout_height="@dimen/_50sdp">

    <RelativeLayout
        android:layout_margin="@dimen/_2sdp"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <ImageView
            android:id="@+id/locked1"
            android:layout_centerVertical="true"
            android:layout_margin="@dimen/_10sdp"
            app:srcCompat="@drawable/locked"
            android:layout_width="@dimen/_35sdp"
            android:layout_height="@dimen/_35sdp" />
        <TextView
            android:textStyle="bold"
            android:textSize="@dimen/_15sdp"
            android:text="Refer &amp; Earn"
            android:textColor="@color/app_color"
            android:layout_toEndOf="@+id/locked1"
            android:layout_centerVertical="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
    </RelativeLayout>


</androidx.cardview.widget.CardView><androidx.cardview.widget.CardView
    android:id="@+id/cardview_plans"
    android:layout_marginTop="@dimen/_5sdp"
    android:layout_width="match_parent"
    app:cardElevation="@dimen/_2sdp"
    app:cardBackgroundColor="@color/colorwhite"
    android:layout_height="@dimen/_50sdp">

    <RelativeLayout
        android:layout_margin="@dimen/_2sdp"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <ImageView
            android:id="@+id/plans"
            android:layout_centerVertical="true"
            android:layout_margin="@dimen/_10sdp"
            app:srcCompat="@drawable/locked"
            android:layout_width="@dimen/_35sdp"
            android:layout_height="@dimen/_35sdp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_toEndOf="@+id/plans"
            android:text="Subscription Plan"
            android:textColor="@color/app_color"
            android:textSize="@dimen/_15sdp"
            android:textStyle="bold" />
    </RelativeLayout>


</androidx.cardview.widget.CardView>

    <androidx.cardview.widget.CardView
        android:id="@+id/cardview_ads_package"
        android:layout_width="match_parent"
        android:layout_height="@dimen/_50sdp"
        android:layout_marginTop="@dimen/_5sdp"
        app:cardBackgroundColor="@color/colorwhite"
        app:cardElevation="@dimen/_2sdp">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_margin="@dimen/_2sdp">

            <ImageView
                android:id="@+id/iv_ads_package"
                android:layout_width="@dimen/_35sdp"
                android:layout_height="@dimen/_35sdp"
                android:layout_centerVertical="true"
                android:layout_margin="@dimen/_10sdp"
                app:srcCompat="@drawable/locked" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_toEndOf="@+id/iv_ads_package"
                android:text="Ads packages"
                android:textColor="@color/app_color"
                android:textSize="@dimen/_15sdp"
                android:textStyle="bold" />
        </RelativeLayout>


    </androidx.cardview.widget.CardView>

    <androidx.cardview.widget.CardView
        android:id="@+id/cardviewAlerts"
        android:layout_width="match_parent"
        android:layout_height="@dimen/_50sdp"
        android:layout_marginTop="@dimen/_5sdp"
        app:cardBackgroundColor="@color/colorwhite"
        app:cardElevation="@dimen/_2sdp">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_margin="@dimen/_2sdp">

            <ImageView
                android:id="@+id/iv_alert"
                android:layout_width="@dimen/_35sdp"
                android:layout_height="@dimen/_35sdp"
                android:layout_centerVertical="true"
                android:layout_margin="@dimen/_10sdp"
                app:srcCompat="@drawable/locked" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_toEndOf="@+id/iv_alert"
                android:text="Alerts"
                android:textColor="@color/app_color"
                android:textSize="@dimen/_15sdp"
                android:textStyle="bold" />
        </RelativeLayout>


    </androidx.cardview.widget.CardView>
    <androidx.cardview.widget.CardView
        android:id="@+id/cardview_logout"
        android:layout_marginTop="@dimen/_5sdp"
        android:layout_width="match_parent"
        app:cardElevation="@dimen/_2sdp"
        app:cardBackgroundColor="@color/colorwhite"
        android:layout_height="@dimen/_50sdp">

        <RelativeLayout
            android:layout_margin="@dimen/_2sdp"
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <ImageView
                android:id="@+id/logut_icon"
                android:layout_centerVertical="true"

                android:layout_margin="@dimen/_10sdp"
                app:srcCompat="@drawable/logout_icon"
                android:layout_width="@dimen/_35sdp"
                android:layout_height="@dimen/_35sdp" />
            <TextView
                android:textStyle="bold"
                android:textSize="@dimen/_15sdp"
                android:text="Logout"
                android:textColor="@color/app_color"
                android:layout_toEndOf="@+id/logut_icon"
                android:layout_centerVertical="true"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
        </RelativeLayout>


    </androidx.cardview.widget.CardView>
    <androidx.cardview.widget.CardView
        android:id="@+id/cardview_chat"
        android:layout_marginTop="@dimen/_5sdp"
        android:layout_width="match_parent"
        app:cardElevation="@dimen/_2sdp"
        android:visibility="gone"
        app:cardBackgroundColor="@color/colorwhite"
        android:layout_height="@dimen/_50sdp">

        <RelativeLayout
            android:layout_margin="@dimen/_2sdp"
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <ImageView
                android:id="@+id/chat_icon"
                android:layout_centerVertical="true"

                android:layout_margin="@dimen/_10sdp"
                app:srcCompat="@drawable/logout_icon"
                android:layout_width="@dimen/_35sdp"
                android:layout_height="@dimen/_35sdp" />
            <TextView
                android:textStyle="bold"
                android:textSize="@dimen/_15sdp"
                android:text="Chat"
                android:textColor="@color/app_color"
                android:layout_toEndOf="@+id/chat_icon"
                android:layout_centerVertical="true"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
        </RelativeLayout>


    </androidx.cardview.widget.CardView>
</LinearLayout>