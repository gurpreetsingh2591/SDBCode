<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:background="#b7000000"

    android:layout_width="match_parent"
    android:layout_height="match_parent"
   >


    <androidx.cardview.widget.CardView
        android:layout_marginLeft="@dimen/_20sdp"
        android:layout_marginRight="@dimen/_20sdp"
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true"
        app:cardElevation="@dimen/_10sdp"
        app:cardCornerRadius="@dimen/_10sdp"

        app:cardBackgroundColor="@color/colorwhite"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

    <RelativeLayout

        android:layout_width="match_parent"
        android:layout_height="wrap_content">




    <RelativeLayout
        android:id="@+id/a"
        android:background="@color/colorwhite"
        android:layout_width="match_parent"
        android:layout_height="@dimen/_80sdp">
        <ImageView
            android:id="@+id/cancel_icon"
            android:layout_margin="@dimen/_10sdp"
            android:layout_alignParentRight="true"
            app:srcCompat="@drawable/cancel_icon"
            android:layout_width="20dp"
            android:layout_height="20dp" />

        <ImageView
            android:layout_width="70dp"
            android:layout_height="70dp"
            android:layout_centerInParent="true"
            android:scaleType="fitCenter"
            app:srcCompat="@drawable/folder_icon" />
    </RelativeLayout>

    <RelativeLayout
        android:layout_below="@+id/a"

        android:layout_width="match_parent"
        android:layout_height="150dp">

        <EditText

            android:id="@+id/edit_floder"
            android:layout_width="fill_parent"
            android:layout_height="@dimen/_35sdp"
            android:layout_marginLeft="@dimen/_10sdp"
            android:layout_marginTop="@dimen/_20sdp"
            android:layout_marginRight="@dimen/_10sdp"
            android:background="@drawable/login_edittext_bg"
            android:digits="abcdefghijklmnopqrstuvwxyz1234567890 "
            android:hint="Folder Name"
            android:inputType="text"
            android:paddingLeft="@dimen/_10sdp"
            android:singleLine="true"
            android:textCursorDrawable="@drawable/color_cursor"
            android:textSize="16sp" />


        <Button
            android:id="@+id/add_folder_btn"
            android:layout_width="@dimen/_150sdp"
            android:layout_height="@dimen/_40sdp"
            android:layout_below="@+id/edit_floder"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="@dimen/_10sdp"
            android:background="@color/app_color"
            android:text="Add Folder"
            android:textColor="@color/colorwhite"
            android:textStyle="bold" />
    </RelativeLayout>

    </RelativeLayout>
    ></androidx.cardview.widget.CardView>


    <RelativeLayout
        android:elevation="@dimen/_10sdp"
        android:id="@+id/loading_view"
        android:background="#6d000000"
        android:visibility="gone"
        android:layout_width="match_parent"
        android:layout_height="match_parent">


    <androidx.cardview.widget.CardView

        app:cardBackgroundColor="@color/colorwhite"
        app:cardElevation="@dimen/_10sdp"
        app:cardCornerRadius="@dimen/_10sdp"
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true"
        android:layout_width="@dimen/_70sdp"
        android:layout_height="@dimen/_70sdp">



    <com.wang.avi.AVLoadingIndicatorView
      android:layout_gravity="center"

       android:elevation="@dimen/_10sdp"

        android:id="@+id/avi"
        style="@style/AVLoadingIndicatorView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:visibility="gone"
        app:indicatorColor="@color/app_color"
        app:indicatorName="BallSpinFadeLoaderIndicator" />

    </androidx.cardview.widget.CardView>

    </RelativeLayout>

</RelativeLayout>