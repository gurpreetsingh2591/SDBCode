<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <RelativeLayout

        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/app_color">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <ImageView
                        android:id="@+id/back_icon"
                        android:layout_width="@dimen/_20sdp"
                        android:layout_height="@dimen/_20sdp"
                        android:layout_alignParentLeft="true"
                        android:layout_marginLeft="@dimen/_10sdp"
                        android:layout_marginTop="@dimen/_10sdp"
                        android:elevation="@dimen/_10sdp"
                        app:srcCompat="@drawable/back_icon" />


                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerInParent="true"
                        android:text="Ad Details"
                        android:textColor="@color/colorwhite"
                        android:textSize="@dimen/_15sdp"
                        android:textStyle="bold" />

                    <ImageView
                        android:id="@+id/menu"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentRight="true"
                        android:layout_centerVertical="true"
                        android:layout_marginStart="@dimen/_10sdp"
                        android:layout_marginTop="@dimen/_10sdp"
                        android:layout_marginEnd="@dimen/_10sdp"
                        android:layout_marginBottom="@dimen/_10sdp"
                        android:visibility="invisible"
                        app:srcCompat="@drawable/menu_icon" />

                </RelativeLayout>

            </RelativeLayout>


            <ScrollView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fillViewport="true">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical">

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent">

                        <de.hdodenhof.circleimageview.CircleImageView
                            android:id="@+id/profile_image"
                            android:layout_width="@dimen/_120sdp"
                            android:layout_height="@dimen/_120sdp"
                            android:layout_alignParentTop="true"
                            android:layout_centerInParent="true"
                            android:layout_marginTop="@dimen/_30sdp"
                            android:src="@drawable/user_profile_icon" />


                        <TextView
                            android:id="@+id/tvTitle"
                            android:layout_width="fill_parent"
                            android:layout_height="@dimen/_35sdp"
                            android:layout_below="@+id/profile_image"
                            android:layout_marginLeft="@dimen/_10sdp"
                            android:layout_marginTop="@dimen/_20sdp"
                            android:layout_marginRight="@dimen/_10sdp"
                            android:background="@drawable/login_edittext_bg"
                            android:gravity="start|center"
                            android:paddingStart="@dimen/_10sdp"
                            android:singleLine="true"
                            android:textColor="@color/colorblack"
                            android:textCursorDrawable="@drawable/color_cursor"
                            android:textSize="18sp" />


                        <TextView
                            android:id="@+id/tvCategory"
                            android:layout_width="fill_parent"
                            android:layout_height="@dimen/_35sdp"
                            android:layout_below="@+id/tvTitle"
                            android:layout_marginLeft="@dimen/_10sdp"
                            android:layout_marginTop="@dimen/_10sdp"
                            android:layout_marginRight="@dimen/_10sdp"
                            android:background="@drawable/login_edittext_bg"
                            android:gravity="start|center"
                            android:paddingStart="@dimen/_10sdp"
                            android:singleLine="true"
                            android:visibility="gone"
                            android:textColor="@color/colorblack"
                            android:textCursorDrawable="@drawable/color_cursor"
                            android:textSize="18sp" />


                        <TextView
                            android:id="@+id/tvSubCategory"
                            android:layout_width="fill_parent"
                            android:layout_height="@dimen/_35sdp"
                            android:layout_below="@+id/tvCategory"
                            android:layout_marginLeft="@dimen/_10sdp"
                            android:layout_marginTop="@dimen/_10sdp"
                            android:layout_marginRight="@dimen/_10sdp"
                            android:background="@drawable/login_edittext_bg"
                            android:gravity="start|center"
                            android:paddingStart="@dimen/_10sdp"
                            android:singleLine="true"
                            android:visibility="gone"
                            android:textColor="@color/colorblack"
                            android:textCursorDrawable="@drawable/color_cursor"
                            android:textSize="18sp" />

                        <TextView
                            android:id="@+id/tvUrl"
                            android:layout_width="fill_parent"
                            android:layout_height="@dimen/_35sdp"
                            android:layout_below="@+id/tvSubCategory"
                            android:layout_marginLeft="@dimen/_10sdp"
                            android:layout_marginTop="@dimen/_10sdp"
                            android:layout_marginRight="@dimen/_10sdp"
                            android:background="@drawable/login_edittext_bg"
                            android:gravity="start|center"
                            android:paddingStart="@dimen/_10sdp"
                            android:singleLine="true"
                            android:textColor="@color/colorblack"
                            android:textCursorDrawable="@drawable/color_cursor"
                            android:textSize="18sp" />

                        <TextView
                            android:id="@+id/tvPhone"
                            android:layout_width="fill_parent"
                            android:layout_height="@dimen/_35sdp"
                            android:layout_below="@+id/tvUrl"
                            android:layout_marginLeft="@dimen/_10sdp"
                            android:layout_marginTop="@dimen/_10sdp"
                            android:layout_marginRight="@dimen/_10sdp"
                            android:background="@drawable/login_edittext_bg"
                            android:gravity="start|center"
                            android:paddingStart="@dimen/_10sdp"
                            android:singleLine="true"
                            android:textColor="@color/colorblack"
                            android:textCursorDrawable="@drawable/color_cursor"
                            android:textSize="18sp" />



                        <TextView
                            android:id="@+id/tvCity"
                            android:layout_width="fill_parent"
                            android:layout_height="@dimen/_35sdp"
                            android:layout_below="@+id/tvPhone"
                            android:layout_marginLeft="@dimen/_10sdp"
                            android:layout_marginTop="@dimen/_10sdp"
                            android:layout_marginRight="@dimen/_10sdp"
                            android:background="@drawable/login_edittext_bg"
                            android:gravity="start|center"
                            android:paddingStart="@dimen/_10sdp"
                            android:singleLine="true"
                            android:textColor="@color/colorblack"
                            android:textCursorDrawable="@drawable/color_cursor"
                            android:textSize="18sp" />



                        <TextView
                            android:id="@+id/tvPincode"
                            android:layout_width="fill_parent"
                            android:layout_height="@dimen/_35sdp"
                            android:layout_below="@+id/tvCity"
                            android:layout_marginLeft="@dimen/_10sdp"
                            android:layout_marginTop="@dimen/_10sdp"
                            android:layout_marginRight="@dimen/_10sdp"
                            android:background="@drawable/login_edittext_bg"
                            android:gravity="start|center"
                            android:paddingStart="@dimen/_10sdp"
                            android:singleLine="true"
                            android:textColor="@color/colorblack"
                            android:textCursorDrawable="@drawable/color_cursor"
                            android:textSize="18sp" />


                        <TextView
                            android:id="@+id/tvProvince"
                            android:layout_width="fill_parent"
                            android:layout_height="@dimen/_35sdp"
                            android:layout_below="@+id/tvPincode"
                            android:layout_marginLeft="@dimen/_10sdp"
                            android:layout_marginTop="@dimen/_10sdp"
                            android:layout_marginRight="@dimen/_10sdp"
                            android:background="@drawable/login_edittext_bg"
                            android:gravity="start|center"
                            android:paddingStart="@dimen/_10sdp"
                            android:singleLine="true"
                            android:textColor="@color/colorblack"
                            android:textCursorDrawable="@drawable/color_cursor"
                            android:textSize="18sp" />


                        <TextView
                            android:id="@+id/tvAddress"
                            android:layout_width="fill_parent"
                            android:layout_height="@dimen/_35sdp"
                            android:layout_below="@+id/tvProvince"
                            android:layout_marginLeft="@dimen/_10sdp"
                            android:layout_marginTop="@dimen/_10sdp"
                            android:layout_marginRight="@dimen/_10sdp"
                            android:background="@drawable/login_edittext_bg"
                            android:gravity="start|center"
                            android:paddingStart="@dimen/_10sdp"
                            android:singleLine="true"
                            android:textColor="@color/colorblack"
                            android:textCursorDrawable="@drawable/color_cursor"
                            android:textSize="18sp" />

                        <TextView
                            android:id="@+id/tvStatus"
                            android:layout_width="fill_parent"
                            android:layout_height="@dimen/_35sdp"
                            android:layout_below="@+id/tvAddress"
                            android:layout_marginLeft="@dimen/_10sdp"
                            android:layout_marginTop="@dimen/_10sdp"
                            android:layout_marginRight="@dimen/_10sdp"
                            android:background="@drawable/login_edittext_bg"
                            android:gravity="start|center"
                            android:paddingStart="@dimen/_10sdp"
                            android:singleLine="true"
                            android:textColor="@color/colorblack"
                            android:textCursorDrawable="@drawable/color_cursor"
                            android:textSize="18sp" />


                    </RelativeLayout>



                </RelativeLayout>
            </ScrollView>

        </LinearLayout>


        <com.wang.avi.AVLoadingIndicatorView
            android:id="@+id/aviDetails"
            style="@style/AVLoadingIndicatorView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:visibility="visible"
            app:indicatorColor="@color/app_color"
            app:indicatorName="BallSpinFadeLoaderIndicator" />

    </RelativeLayout>
</androidx.constraintlayout.widget.ConstraintLayout>